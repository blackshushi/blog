!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' 
    %script{:crossorigin => "anonymous", :integrity => "sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", :src => "https://code.jquery.com/jquery-3.2.1.slim.min.js"}
    
    %title
      = yield :title

  %body
    .container
      = render 'layouts/header'
      = yield

:sass
  $pri: #128CFC;
  $sec: #fffffe;
  $dark-pri: #0B5AA2;

  .container 
    box-sizing: border-radius;
    font-family: 'Rubik', sans-serif;
    border: 1px solid black;
    position: absolute;
    top: 0; right: 0; bottom: 0%; left: 0;
    margin: 0;
    height: auto;
    display: grid;
    padding: 5% 0 5% 0;
    place-items: center;
    overflow: auto;
    background-color: $pri;

  .header 
    padding: 10px 0 10px 0;

  .items 
    width: 50%;
    background: $sec;
    box-shadow: 0 3px 6px rgba(black,0.16), 0 3px 6px rgba(black,0.23);
    border-top: 10px solid $dark-pri;

  .items header
    width: 30px;
    margin-top: 5%;

  .items-head p
    padding: 5px 20px;
    margin: 10px;
    color: #0B5AA2;
    font-weight: bold;
    font-size: 20px;

  .items-head pp
    padding: 5px 20px;
    margin: 10px;
    color: #0B5AA2;
    font-size: 16px;

  .items-head hr 
    width: 70%;
    margin: 0px 30px;
    border: 1px solid $dark-pri;

  .items-body 
    padding: 10px;
    margin: 10px 10px 10px 10px;
    display: grid;
    grid-gap: 10px;

  .items-body header
    color: #0B5AA2;
    text-align: center;
    margin-left: 35px;
    font-size: 20px;
    font-weight: bold;

  .items-body-content 
    padding: 10px;
    padding-right: 0px;
    display: grid;
    grid-template-columns: 10fr 1fr;
    // background-color: lightblue;
    font-size: 13px;
    grid-gap: 10px;
    border: 1px solid transparent;
    cursor: pointer;

  .items-body-content right
    text-align: right;
    padding-right: auto;

  .items-body-content:hover
    border-radius: 15px;
    border: 1px solid $dark-pri;

  .items-body-content i
    align-self: center;
    font-size: 15px;
    color: $dark-pri;
    font-weight: bold;
    animation: icon 1.5s infinite forwards;

  @keyframes icon 
    0%,100%
      transform: translate(0px);

    50% 
      transform: translate(3px);

  .form
    width: 100%;
    height: 100%;
    margin-top: 3%;
    box-shadow: 4px 3px 20px; 
    border-top-left-radius: 1.5rem;
    border-top-right-radius: 1.5rem;
    border-bottom-left-radius: 1.5rem;
    border-bottom-right-radius: 1.5rem;

  .title
    background: #ADD8E6;
    height: 40px;
    border-top-left-radius: 1.5rem;
    border-top-right-radius: 1.5rem;

  .title-line
    text-align: center;
    padding-top: 1%
    color: black;

  .form-table
    width: 100%;
    height: 100%;

  .form-table tr
    font-size: 20px;
    font-weight: 40;

  .form-table th, 
    width: 40%;

  .form-table td
    width: 60%;

  .text-field
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;


  .form-table-button-small
    background: linear-gradient(135deg, #753370 0%, #298096 100%);
    border: none;
    border-radius: 50px;
    color: white;
    font-weight: 200;
    font-size: 6;
    margin: 10px 25% 10px 25%;
    letter-spacing: .11rem;
    outline: none;

  .form-table-button
    background: linear-gradient(135deg, #753370 0%, #298096 100%);
    padding: 15px;
    border: none;
    border-radius: 50px;
    color: white;
    font-weight: 400;
    font-size: 12;
    margin: 10px 25% 10px 25%;
    width: 50%;
    letter-spacing: .11rem;
    outline: none;

  .form-table-button:hover
    transform: scale(1.05) translateY(-3px);
    box-shadow: 3px 3px 6px #38373785;

  .button
    background-color: DodgerBlue; /* Blue background */
    border: none; /* Remove borders */
    color: white; /* White text */
    padding: 12px 16px; /* Some padding */
    font-size: 16px; /* Set a font size */
    cursor: pointer; /* Mouse pointer on hover */
    display: inline;
    border-top-left-radius: 1.5rem;
    border-top-right-radius: 1.5rem;
    border-bottom-left-radius: 1.5rem;
    border-bottom-right-radius: 1.5rem;

  /* Darker background on mouse-over */
  .button:hover 
    background-color: RoyalBlue;
